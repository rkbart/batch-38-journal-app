<h1><%= @task.description %></h1>
<h2>Due Date: <%= @task.due_date %></h2>

<%= link_to "Edit Task", edit_category_task_path(@task.category, @task), class: "btn" %>

<%= link_to "Delete Task", category_task_path(@task.category, @task), 
data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
class: "btn" %>

<%= link_to "Back to Category", category_path(@task.category), class: "btn" %>