<div class = "categories-title">
  <h1>Categories💼</h1>
  <%= link_to "📌View Available Tasks", tasks_path %>
</div>

<% @categories.each do |category| %>
  <div class = "categories-container">
    <h2>📁<%= link_to category.name, category %> (<%= category.tasks.count %>)</h2>
    <% unless category.name == "Uncategorized" %>
      <%= link_to "📝", edit_category_path(category), class: "edit-icon" %>
      <%= link_to "⛔", category_path(category), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure you want to delete this category?"},
                          class: "delete-icon"  %>
    <%end%>
  </div>
<%end%>

<%= link_to "✍ Add New Category", new_category_path, class: "btn new-category" %>
