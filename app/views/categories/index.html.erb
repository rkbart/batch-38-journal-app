<h1>Categories</h1>

<% @categories.each do |category| %>
  <div>
    <h2><%= link_to category.name, category %></h2>
    <%= link_to "Edit Category", edit_category_path(category), class: "btn" %>
    <%= link_to "Delete Category", category_path(category), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: "btn" %>
  </div>
<%end%>

