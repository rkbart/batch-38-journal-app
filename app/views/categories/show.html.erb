<h1><%= @category.name %></h1>

<h2>Tasks</h2>

<% if @tasks.any? %>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <p><%= link_to task.description, category_task_path(@category, task) %></p> 
        <p><%= task.due_date %></p> 
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tasks in this category yet.</p>
<% end %>

<%= link_to 'Add New Task', new_category_task_path(@category), class: "btn" %>
<%= link_to 'Back to Categories', categories_path, class: "btn" %>
