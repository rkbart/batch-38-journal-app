<div class = "categories-show-container">
  <h1><%= @category.name %>🗂️</h1>
  
  <div class = "tasks-title">
    <h2>Tasks🗒️</h2>
  </div>

  <% if @tasks.any? %>
    
      <% @tasks.each do |task| %>
        <div class = "task">
          <p>📌<%= link_to task.description.titleize, category_task_path(@category, task) %></p> 
          <p style = "font-weight: bold;">📆 <%= task.due_date.strftime("%B %d, %Y") %></p> 
        </div>
      <% end %>
    
  <% else %>
    <p>No tasks in this category yet.</p>
  <% end %>

  <%= link_to '📋 Add New Task', new_category_task_path(@category), class: "btn" %>
  <%= link_to '⬅️ Back to Categories', categories_path, class: "btn" %>
</div>